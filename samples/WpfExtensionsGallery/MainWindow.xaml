<Window x:Class="WpfExtensionsGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExtensionsGallery"
        mc:Ignorable="d" ResizeMode="CanResizeWithGrip"
        Title="WpfExtensions Gallery App" Height="800" Width="1024" Icon="/images/icon64x64.png">
    <Window.Resources>
        <DataTemplate x:Key="NavigationItemTemplate">
            <StackPanel Orientation="Horizontal" ToolTip="{Binding Description}">
                <TextBlock Text="{Binding Symbol}" FontSize="16" FontFamily="Segoe Fluent Icons" VerticalAlignment="Center" Margin="14,0" Padding="4"/>
                <TextBlock Text="{Binding Title}" Margin="0,10,22,10" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>

    </Window.Resources>
    <Grid x:Name="root"/>
</Window>
